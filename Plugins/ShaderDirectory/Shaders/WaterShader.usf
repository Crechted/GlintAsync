    float3 BaseColor = MaterialInputs.BaseColor.xyz * 1.0f;
    float3 EmissiveColor = MaterialInputs.EmissiveColor.xyz * 1.0f;
    float3 SurfaceColor = saturate(BaseColor + EmissiveColor);
    float2 TexCoord = 0;
#if NUM_TEX_COORD_INTERPOLATORS
